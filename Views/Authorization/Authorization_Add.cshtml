@{
    ViewData["Title"] = "Authorization_Index";
    Layout = "~/Views/Shared/Layout/_Layout.cshtml";
}
<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <div class="toolbar" id="kt_toolbar">
        <div id="kt_toolbar_container" class="container-fluid d-flex flex-stack">
            <div data-kt-swapper="true" data-kt-swapper-mode="prepend" data-kt-swapper-parent="{default: '#kt_content_container', 'lg': '#kt_toolbar_container'}" class="page-title d-flex align-items-center me-3 flex-wrap mb-5 mb-lg-0 lh-1">
                <h1 class="d-flex align-items-center text-dark fw-bold my-1 fs-3">ผู้ใช้งาน</h1>
                <span class="h-20px border-gray-200 border-start mx-4"></span>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="@Url.Action("Authorization_Index","Authorization")" class="text-muted text-hover-primary">ผู้ใช้งาน</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="post d-flex flex-column-fluid" id="kt_post">
        <div id="kt_content_container" class="container-xxl">
            <div class="card">
                <div class="card-body pt-0">
                    <div class="row mb-3" style="padding-top: 1.5rem!important;">
                        <div class="col-6">
                            <h2>
                                เพิ่มรายการ
                            </h2>
                        </div>
                        <div class="col-6" style="text-align:right;">
                            <a type="button" class="btn btn-secondary" href="@Url.Action("Authorization_Index","Authorization")">ย้อนกลับ</a>
                        </div>
                    </div>
                    <form id="form_create" enctype="multipart/form-data">
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    Firstname
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Firstname" />
                            </div>
                            <div class="col-2">
                                <span>
                                    Lastname
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="text" class="form-control" name="Lastname" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    UserName
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="email" class="form-control" name="UserName" placeholder="lighting@Lighting.com" />
                            </div>
                            <div class="col-2">
                                <span>
                                    password
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="password" class="form-control" name="password" />
                            </div>
                        </div>
                        <div class="row mb-3">
                            <div class="col-2">
                                <span>
                                    Email
                                </span>
                            </div>
                            <div class="col-4">
                                <input type="email" class="form-control" name="Email" placeholder="lighting@Lighting.com" />
                            </div>
                        </div>
                    </form>
                    <div class="row mb-3" style="justify-content: right;">
                        <div class="col-1">
                            <a class="btn btn-success" onclick="submit_form()">บันทึก</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>
        function submit_form() {
            var forms = $('#form_create')[0];
            var data = new FormData(forms);
            $.ajax({
                type: 'post',
                url: '/Authorization/Authorization_Edit_Submit',
                data: data,
                processData: false,
                contentType: false,
                beforeSend: function () {
                    Swal.fire('Please wait')
                    Swal.showLoading()
                },
                success: function (data) {
                    Swal.fire({
                        icon: 'success',
                        title: 'บันทึกข้อมูลเรียบร้อยแล้ว',
                        showConfirmButton: false,
                        timer: 1500
                    });
                    window.location.href = "/Authorization/Authorization_Index";
                },
                error: (e) => {
                    displayError(e);
                }
            });
        }
    </script>
}