@{
    ViewData["Title"] = "IR_news";
    Layout = "~/Views/Shared/Layout/Frontend_Layout.cshtml";
    var Count_IR_Latest_News = (List<Lighting.Areas.Identity.Data.IR_Latest_New>)ViewBag.IR_Latest_News;
    var Count_IR_Latest_NewDetail = (List<Lighting.Areas.Identity.Data.IR_Latest_NewDetail>)ViewBag.IR_Latest_NewDetail;
}

@Html.Partial("~/Views/Shared/Inc/IR_inc_topmenu.cshtml")
<input id="page_name" value="ir" hidden />

<!---------- IR 08 NEWS ROOM :: IR NEWS ---------->
<div class="content-padding foot-pad">
    <div class="container-fluid">
        <div class="wrap-pad">
            <div class="row">
                <div class="col">
                    <div class="header-twoline">
                        @if (Count_IR_Latest_News.Count() != 0)
                        {
                            if (Context.Request.Cookies["lang"] == "EN")
                            {
                                foreach (var item in ViewBag.IR_Latest_News)
                                {
                                    <h5>@item.Title_EN</h5>
                                    <h1>@item.SubTitle_EN</h1>
                                }
                            }
                            else
                            {
                                foreach (var item in ViewBag.IR_Latest_News)
                                {
                                    <h5>@item.Title_TH</h5>
                                    <h1>@item.SubTitle_TH</h1>
                                }
                            }
                        }
                        else
                        {
                            <h5>ห้องข่าว</h5>
                            <h1>ข่าวล่าสุด</h1>
                        }
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xl-9 col-lg-10 col-md-11 col-12">
                    <div class="timeline-section" id="GetIR_NewDetail">
                        @if (Count_IR_Latest_NewDetail.Count() != 0)
                        {
                            if (Context.Request.Cookies["lang"] == "EN")
                            {
                                foreach (var item in ViewBag.IR_Latest_NewDetail)
                                {
                                    <div class="newsBox">
                                        <div class="row">
                                            <div class="col">
                                                <a class="news-content" href="@Url.Action("IR_news_detail","Frontend_IR", new { Id = item.Id })">
                                                    <div class="news-topic">
                                                        <p>@item.Title_EN</p>
                                                    </div>
                                                    @if (@item.NewDate != null)
                                                    {
                                                        <div class="news-date">@item.NewDate.ToString("dd MMM yyyy")</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="news-date"></div>
                                                    }
                                                    <div class="txt-content">
                                                        @Html.Raw(item.Detail_EN)
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                foreach (var item in ViewBag.IR_Latest_NewDetail)
                                {
                                    <div class="newsBox">
                                        <div class="row">
                                            <div class="col">
                                                <a class="news-content" href="@Url.Action("IR_news_detail","Frontend_IR", new { Id = item.Id })">
                                                    <div class="news-topic">
                                                        <p>@item.Title_TH</p>
                                                    </div>
                                                    @if (@item.NewDate != null)
                                                    {
                                                        <div class="news-date">@item.NewDate.ToString("dd MMM yyyy")</div>
                                                    }
                                                    else
                                                    {
                                                        <div class="news-date"></div>
                                                    }
                                                    <div class="txt-content">
                                                        <p> @Html.Raw(item.Detail_TH)</p>
                                                    </div>
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        }
                        else
                        {
                            <div class="newsBox">
                                <div class="row">
                                    <div class="col">
                                        <a class="news-content" href="@Url.Action("IR_news_detail","Frontend_IR")">
                                            <div class="news-topic">
                                                <p>หัวข้อข่าวสารนักลงทุนสัมพันธ์ หัวข้อข่าวสารนักลงทุนสัมพันธ์ หัวข้อข่าวสารนักลงทุนสัมพันธ์</p>
                                            </div>
                                            <div class="news-date">20 FEB 2023</div>
                                            <div class="txt-content">
                                                <p>สัมนาอีสต์เทควันโดบอมบ์โพสต์ เพนกวิน โฮลวีตคอนเซ็ปต์แรงดูดอีแต๋นทัวริสต์ โพลล์สหัสวรรษแดนเซอร์พล็อตแกงค์ ซ้อแบล็กมุมมอง อิเหนา บูมจึ๊กฮิเธคอันเดอร์ อุรังคธาตุจูเนียร์บอยคอตต์เอาท์ฮัลโหล เกย์วืดยนตรกรรม อีสต์ซีรีส์คอนแท็คอัลไซเมอร์วิก สเตชั่นไมค์โฟน ติ๋มภควัมปติเชฟ เหี่ยวย่นมายาคติ อิเหนาไวอากร้าตี๋ อีสต์ พาสเจอร์ไรส์ซิมดยุคติวเตอร์</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col">
                    <div class="content-center">
                        <nav aria-label="Page navigation example">
                            <ul class="pagination">
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Previous">
                                        <i class="fas fa-arrow-left"></i>
                                    </a>
                                </li>
                                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                <li class="page-item"><a class="page-link" href="#">2</a></li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item"><a class="page-link" href="#">4</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#" aria-label="Next">
                                        <i class="fas fa-arrow-right"></i>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <script>

    </script>
}